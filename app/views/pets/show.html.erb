
<p id="notice"><%= notice %></p>
<div class="jumbotron text-center">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag(@pet.photo, size:180, class:"pet_image") %>    
    </div>
    <div class="col-md-8">
      <strong>Situação:</strong>
      <%= @situation %>
      <br />
      <strong>Nome:</strong>
      <%= @pet.name %>    
      <br />
      <strong>Animal:</strong>
      <%= @animal %>
      <br />
      <strong>Raça:</strong>
      <%= @race %>
      <br />
      <strong>Sexo:</strong>
      <%= @pet.sex %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <p>
        <strong>Endereço:</strong>
        <%= @pet.address %>
      </p>
    </div>
    <div class="col-md-8">
      <img src="https://maps.googleapis.com/maps/api/staticmap?center=<%= @pet.latitude %>,<%= @pet.longitude %>&zoom=13&size=600x300&maptype=roadmap&markers=<%= @pet.latitude %>,<%= @pet.longitude %>&key=AIzaSyDMI_uP_6ASCcL8ETf3uTu2_8hy1hn1ROw" class="static_map"></img>
    </div>
  </div>
  <div class="row">
    <%= social_share_button_tag("Olá eu sou "+@pet.name+", você me viu por ai? #LosPets", :url => pet_url, :image => @pet.photo, desc: "Olá eu sou "+@pet.name+", você me viu por ai? #LosPets") %>
  </div>
</div>


<%= link_to 'Edit', edit_pet_path(@pet) %> |
<%= link_to 'Back', pets_path %>
